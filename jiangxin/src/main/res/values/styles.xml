<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--这是TabLayout的字体大小和颜色-->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/colorAccent</item>-->
    </style>

    <!--主页tabs样式-->
    <style name="main_bottom_tabs">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">0.0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize_tabs_label</item>
        <item name="android:textColor">@color/main_bottom_tabs_textcolor</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:drawablePadding">@dimen/main_bottom_tabs_img_text_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--设置 toolbar title字体大小-->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
