<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/main_tab4_personal_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/main_tab4_personal_info_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <ImageView
                android:id="@+id/img_personal_profile"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/main_tab4_profile_block_shape"/>
            <TextView
                android:id="@+id/nick_name"
                android:layout_toRightOf="@+id/img_personal_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_tab4_profile_nick_name_text_color"
                android:textSize="@dimen/main_tab4_profile_nick_name_text_size"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="NICK NAME"/>
            <TextView
                android:id="@+id/profile_id"
                android:layout_toRightOf="@+id/img_personal_profile"
                android:layout_below="@+id/nick_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main_tab4_profile_id_text_color"
                android:textSize="@dimen/main_tab4_profile_id_text_size"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="ID:000000"/>
            <TextView
                android:id="@+id/profile_level"
                android:layout_toRightOf="@+id/img_personal_profile"
                android:layout_alignBottom="@+id/img_personal_profile"
                android:layout_below="@+id/profile_id"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/main_tab4_profile_id_text_size"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="职级：A0"/>

            <ImageView
                android:id="@+id/img_T_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_below="@+id/profile_id"
                android:layout_toRightOf="@+id/img_personal_profile"
                android:layout_alignBottom="@+id/img_personal_profile"
                android:layout_toEndOf="@+id/profile_level"
                android:src="@mipmap/ic_t_coin"/>

            <TextView
                android:id="@+id/profile_t_coin"
                android:layout_below="@+id/profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/main_tab4_profile_t_coin_text_color"
                android:textSize="@dimen/main_tab4_profile_id_text_size"
                android:layout_toRightOf="@+id/img_personal_profile"
                android:layout_alignBottom="@+id/img_personal_profile"
                android:layout_toEndOf="@+id/img_T_coin"
                android:textStyle="bold"
                android:text="币：0"/>

            <ImageView
                android:id="@+id/img_profile_common_right_errow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_next_arrow"/>

        </RelativeLayout>

        <View
            android:id="@+id/main_tab4_split_line"
            android:layout_below="@+id/main_tab4_personal_info_block"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_tab4_profile_split_line_color"/>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_article" android:layout_below="@+id/main_tab4_split_line" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_article" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_article"/>
            <TextView android:id="@+id/mine_list_my_article" android:layout_toRightOf="@+id/img_mine_my_article" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的文章"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_topics" android:layout_below="@+id/main_tab4_mine_list_my_article" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_topic" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_topic"/>
            <TextView android:id="@+id/mine_list_my_topic" android:layout_toRightOf="@+id/img_mine_my_topic" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的帖子"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_questions" android:layout_below="@+id/main_tab4_mine_list_my_topics" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_questions" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_questions"/>
            <TextView android:id="@+id/mine_list_my_questions" android:layout_toRightOf="@+id/img_mine_my_questions" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的问题集"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_videos" android:layout_below="@+id/main_tab4_mine_list_my_questions" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_video" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_video"/>
            <TextView android:id="@+id/mine_list_my_video" android:layout_toRightOf="@+id/img_mine_my_video" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的视频"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_course" android:layout_below="@+id/main_tab4_mine_list_my_videos" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_course" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_course"/>
            <TextView android:id="@+id/mine_list_my_course" android:layout_toRightOf="@+id/img_mine_my_course" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的试题"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_note" android:layout_below="@+id/main_tab4_mine_list_my_course" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_note" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_note"/>
            <TextView android:id="@+id/mine_list_my_note" android:layout_toRightOf="@+id/img_mine_my_note" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的笔记"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_favor" android:layout_below="@+id/main_tab4_mine_list_my_note" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_favor" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_favor"/>
            <TextView android:id="@+id/mine_list_my_favor" android:layout_toRightOf="@+id/img_mine_my_favor" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的收藏"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_msg" android:layout_below="@+id/main_tab4_mine_list_my_favor" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_msg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_msg"/>
            <TextView android:id="@+id/mine_list_my_msg" android:layout_toRightOf="@+id/img_mine_my_msg" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="我的消息"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_follow" android:layout_below="@+id/main_tab4_mine_list_my_msg" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_follow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_follow"/>
            <TextView android:id="@+id/mine_list_my_follow" android:layout_toRightOf="@+id/img_mine_my_follow" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="关注的其他用户"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_my_interesting" android:layout_below="@+id/main_tab4_mine_list_my_follow" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_my_interesting" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_my_interesting"/>
            <TextView android:id="@+id/mine_list_my_interesting" android:layout_toRightOf="@+id/img_mine_my_interesting" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="感兴趣的技术方向"/>
        </RelativeLayout>
        <RelativeLayout android:id="@+id/main_tab4_mine_list_settings" android:layout_below="@+id/main_tab4_mine_list_my_interesting" android:layout_marginTop="15dp" android:layout_marginLeft="20dp" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:id="@+id/img_mine_settings" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@mipmap/ic_settings"/>
            <TextView android:id="@+id/mine_list_settings" android:layout_toRightOf="@+id/img_mine_settings" android:clickable="true" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@drawable/main_tab4_mine_item_click_selector" android:textSize="@dimen/main_tab4_mine_list_text_size" android:textStyle="bold" android:layout_marginLeft="15dp" android:text="设置"/>
        </RelativeLayout>


    </RelativeLayout>
</ScrollView>