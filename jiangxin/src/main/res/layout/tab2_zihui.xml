<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb2_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextAppearance="@style/Toolbar.TitleText">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/main_tab2_search"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="36dp"
                android:layout_margin="10dp"
                android:drawableLeft="@mipmap/ic_search"
                android:paddingLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/main_search_text_size"
                android:textColor="@color/main_search_hint_text_color"
                android:background="@drawable/main_search_frame_shape"
                android:text="@string/main_tab2_search_hint"/>

            <ImageView
                android:id="@+id/main_tab2_write_topic"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_write_topic"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/main_tab2_subtitle_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/tb2_toolbar">

        <android.support.design.widget.TabLayout
            android:id="@+id/main_tab2_subtitle_tablayout"
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            app:layout_scrollFlags="scroll"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabSelectedTextColor="@color/colorAccent" />

    </LinearLayout>

    <View
        android:id="@+id/main_tab2_topic_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/main_tab2_subtitle_linear"
        android:background="#f0f0f0" />

    <android.support.v4.view.ViewPager
        android:id="@+id/main_tab2_sub_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/main_tab2_topic_line"/>




</RelativeLayout>