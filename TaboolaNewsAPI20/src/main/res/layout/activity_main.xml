<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_tabLayout"
        app:tabIndicatorColor="#2F4F4F"
        app:tabIndicatorHeight="0.0dp"
        app:tabTextColor="@color/tabLayoutTextColor"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextAppearance="@style/TabLayoutStyle"
        app:tabMode="scrollable" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_tablayout_below_line" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>

