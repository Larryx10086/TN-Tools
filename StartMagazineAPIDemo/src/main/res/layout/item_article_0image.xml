<!-- RecyclerView 的每一项布局-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/bg_feed_list_cardview"
    android:minHeight="30dp"
    android:layout_margin="5dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:focusable="true"
    android:enabled="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/bg_feed_list_cardview">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_article_0_image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|left"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/article_title_color"
            android:textSize="@dimen/list_title_size" />
        <!-- 新闻 发布时间 来源 阅读次数-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/item_article_0_image_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:layout_gravity="center_vertical|left"
                android:text=""
                android:textSize="@dimen/list_sub_size"
                android:textColor="@color/article_sub_color" />

            <TextView
                android:id="@+id/item_article_0_image_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/list_sub_size"
                android:textColor="@color/article_sub_color" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>