<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/main_search_view_block_margin"
    android:layout_marginRight="@dimen/main_search_view_block_margin">

    <View
        android:id="@+id/search_input_frame_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_search_view_line_color"/>

    <TextView
        android:id="@+id/search_input_frame_title1"
        android:layout_below="@+id/search_input_frame_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_search_view_block_margin"
        android:text="@string/main_search_input_frame_title1"
        android:textColor="@color/main_search_view_title_color"
        android:textSize="@dimen/main_search_view_title_text_size"/>

    <FrameLayout
        android:id="@+id/search_input_frame_author_block"
        android:layout_below="@+id/search_input_frame_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/main_search_view_input_frame_author_minHeight">

    </FrameLayout>

    <View
        android:id="@+id/search_input_frame_line2"
        android:layout_below="@+id/search_input_frame_author_block"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/main_search_view_block_margin"
        android:background="@color/main_search_view_line_color"/>

    <TextView
        android:id="@+id/search_input_frame_title2"
        android:layout_below="@+id/search_input_frame_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_search_view_block_margin"
        android:text="@string/main_search_input_frame_title2"
        android:textColor="@color/main_search_view_title_color"
        android:textSize="@dimen/main_search_view_title_text_size"/>

    <FrameLayout
        android:id="@+id/search_input_frame_hottopic_block"
        android:layout_below="@+id/search_input_frame_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/main_search_view_input_frame_hottopic_minHeight">

    </FrameLayout>





</RelativeLayout>