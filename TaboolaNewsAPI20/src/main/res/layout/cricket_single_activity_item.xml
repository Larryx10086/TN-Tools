<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cricket_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_shape_cricket_item"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center_vertical">
            <TextView
                android:id="@+id/cricket_competition_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:text="05/27/2019"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical">
            <TextView
                android:id="@+id/cricket_competition_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:text="Series"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center_vertical">
            <TextView
                android:id="@+id/cricket_competition_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:text="ICC"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical">
            <ImageView
                android:id="@+id/cricket_competition_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/reddot"
                android:gravity="right"/>
        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.celltick.apac.news.widget.SmartSimpleDraweeView
                android:id="@+id/cricket_team_A_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/image_bg_color"
                android:scaleType="centerCrop"
                fresco:actualImageScaleType="focusCrop" />
            <TextView
                android:id="@+id/cricket_team_A_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:singleLine="true"
                android:text="teamA"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/cricket_game_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:text="03:00 AM"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left">
                    <TextView
                        android:id="@+id/cricket_game_scores_A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7A7A7A"
                        android:textSize="8sp"
                        android:text="--"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right">
                    <TextView
                        android:id="@+id/cricket_game_scores_B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#7A7A7A"
                        android:textSize="8sp"
                        android:text="--"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <com.celltick.apac.news.widget.SmartSimpleDraweeView
                android:id="@+id/cricket_team_B_img"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:background="@color/image_bg_color"
                android:scaleType="centerCrop"
                fresco:actualImageScaleType="focusCrop" />
            <TextView
                android:id="@+id/cricket_team_B_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#7A7A7A"
                android:textSize="14sp"
                android:text="teamB"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>