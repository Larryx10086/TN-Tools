<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb1_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        >

        <TextView
            android:id="@+id/search_tx_id"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/white"
            android:gravity="center_vertical|left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="2dp"
            android:textColorHint="#AAAAAA"
            android:textSize="15dip"
            android:hint="search here..."/>

    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_tabLayout"
        app:tabIndicatorColor="#2F4F4F"
        app:tabIndicatorHeight="0.0dp"
        app:tabTextColor="@color/tabLayoutTextColor"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabTextAppearance="@style/TabLayoutStyle"
        app:tabMode="scrollable" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_tablayout_below_line" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_article"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
